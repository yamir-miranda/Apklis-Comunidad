<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_a_ganancias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="1250.65 CUP"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/gananciasFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_gravity="center"
            android:text="25/12/2020"
            android:textSize="@dimen/_13sdp" />



        <LinearLayout
            android:layout_width="@dimen/_64sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical">
            <TextView
                android:id="@+id/gananciasVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4.0dip"
                android:textSize="@dimen/_10ssp"
                android:text="0 Ventas" />

            <TextView
                android:id="@+id/gananciasImporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2.0dip"
                android:textSize="@dimen/_10ssp"
                android:text="2000.00 CUP" />
        </LinearLayout>
    </FrameLayout>

