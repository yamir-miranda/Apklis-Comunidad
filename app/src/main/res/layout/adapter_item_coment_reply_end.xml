<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?BackgroundCommentReplyEnd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/_30sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?colorNegro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userAvatarComentReply"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/avatar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/full_name_comment_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Yamir Miranda Veitia"
                android:textColor="?colorNegro"
                android:textSize="@dimen/_12ssp"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/commentOptionRE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/ic_coment_option"
                app:tint="?colorNegro"
                tools:ignore="RtlHardcoded" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/commentDateRE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8/10/2020"
            android:textColor="?colorNegro"
            android:textSize="@dimen/_9ssp" />

    </LinearLayout>

    <TextView
        android:id="@+id/commentTextRE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="ewaudh eaudfuc neaufdzncu uenfadu uebadfu beadfuzb \nebfasuobfuewdfnd enaduofboewu nueobadfuowed\neiwdbfobeoeusdbfuobeousdbouf \nnewobdfuorbsdugboursd \newindfinerwisdgfo uewbdsufbewu bewudsbfwbsudb buewbdsfubwousdbo bewudbsufbwuuwebsd \nebwudfbweusdb buewbdsfub buebwfusdb uewbfdsubf"
        android:textColor="?colorNegro"
        android:textSize="@dimen/_9ssp" />

</LinearLayout>
